<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="@dimen/grid_one"
    android:paddingRight="@dimen/grid_one"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/submitted"
        android:paddingTop="@dimen/grid_one"
        android:paddingLeft="@dimen/grid_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/case_submitted"
        android:textSize="@dimen/body_text"
        android:textColor="@color/BaseColorBlack"
        fontPath="fonts/Monserrat-Bold.ttf"
        tools:ignore="MissingPrefix" />
    <TextView
        android:id="@+id/heading_case"
        android:paddingLeft="@dimen/grid_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/step_three"
        android:textSize="@dimen/medium_text"
        fontPath="fonts/Monserrat-Black.ttf"
        tools:ignore="MissingPrefix" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="@dimen/grid_one"
        android:paddingBottom="@dimen/grid_one"/>

    <LinearLayout

        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/grid_half"
        android:layout_weight="1"
        android:id="@+id/volunteer1_case"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="4dp"
        card_view:cardMaxElevation="6dp"
        android:layout_width="100dp"
        android:layout_height="100dp">
    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/volunteer1"
        android:scaleType="centerCrop"
        android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/grid_half"
        android:layout_weight="1"
        android:id="@+id/volunteer2"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="4dp"
        card_view:cardMaxElevation="6dp"
        android:layout_width="100dp"
        android:layout_height="100dp">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/volunteer2"
            android:scaleType="centerCrop"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_weight="1"
            android:layout_margin="@dimen/grid_half"
            android:id="@+id/volunteer3"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            card_view:cardCornerRadius="6dp"
            card_view:cardElevation="4dp"
            card_view:cardMaxElevation="6dp"
            android:layout_width="100dp"
            android:layout_height="100dp">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/volunteer3"
                android:scaleType="centerCrop"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>


    </LinearLayout>

</LinearLayout>